{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "target": "ES2022",
    "module": "preserve",
    "paths": {
      "@spartan-ng/helm/button": ["./libs/ui/button/src/index.ts"],
      "@spartan-ng/helm/utils": ["./libs/ui/utils/src/index.ts"],
      "@spartan-ng/helm/input": ["./libs/ui/input/src/index.ts"],
      "@spartan-ng/helm/sonner": ["./libs/ui/sonner/src/index.ts"],
      "@spartan-ng/helm/alert-dialog": ["./libs/ui/alert-dialog/src/index.ts"],
      "@spartan-ng/helm/dialog": ["./libs/ui/dialog/src/index.ts"],
      "@spartan-ng/helm/icon": ["./libs/ui/icon/src/index.ts"],
      "@spartan-ng/helm/dropdown-menu": ["./libs/ui/dropdown-menu/src/index.ts"],
      "@spartan-ng/helm/typography": ["./libs/ui/typography/src/index.ts"]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  },
  "files": [],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.spec.json"
    }
  ]
}
